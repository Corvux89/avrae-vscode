{
	"name": "avrae-utilities",
	"displayName": "Avrae Utilities",
	"publisher": "Croebh",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:avrae-utilities.getGvar",
		"onCommand:avrae-utilities.updateGvar"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "avrae-utilities.getGvar",
				"title": "Avrae Utilities: Get GVAR"
			},
			{
				"command": "avrae-utilities.updateGvar",
				"title": "Avrae Utilities: Update GVAR"
			}
		],
		"languages": [
			{
				"id": "draconic",
				"aliases": [
					"Draconic",
					"draconic"
				],
				"extensions": [
					".alias",
					".snippet",
					".gvar"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "draconic",
				"scopeName": "source.draconic",
				"path": "./syntaxes/draconic.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "Avrae Utilities",
			"properties": {
				"avrae.token": {
					"type": "string",
					"default": "",
					"description": "This is where you paste your avrae-token from the  avrae.io website. You can find information on how to get this token in the readme on https://github.com/Croebh/avrae-sublime\n\nPlease keep this token private, anyone who gains access to this token could potentially gain access to your Discord account.",
					"format": "password"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"axios": "^0.24.0"
	}
}
